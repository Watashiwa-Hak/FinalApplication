<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light grey background -->
            <corners android:radius="4dp"/> <!-- Slightly rounded corners -->
        </shape>
    </item>
    <!-- Border -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Grey border -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>
