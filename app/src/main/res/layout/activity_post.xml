<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Post">

        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Product"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageButton
            android:id="@+id/imageUploadButton"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/image_placeholder"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/tvSettingsTitle"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageUploadButton"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"

            android:hint="Product Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:background="@drawable/bg"/>  <!-- Rounded corners for EditText --> />

        <EditText
            android:id="@+id/editTextProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextProductName"
            android:hint="Product Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:background="@drawable/bg" />
        <EditText
            android:id="@+id/editTextProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextProductDescription"
            android:hint="Price"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="8dp"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:background="@drawable/bg" />
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textColor="@color/white"
            android:layout_below="@id/editTextProductPrice"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"

            android:layout_marginTop="16dp"
            android:background="@drawable/bg" />

    </RelativeLayout>
